<%@page import="com.pojo.Projectpojo"%>
<%@page import="java.util.ArrayList"%>
<%@page import="com.dao.ProjectDao"%>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project</title>
    <style>
        /* Your existing styles */
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        // Function to handle project deletion
        function deleteProject(projectId) {
            $.ajax({
                url: 'DeleteProjectServlet',
                type: 'POST',
                data: { projectId: projectId },
                success: function(response) {
                    alert(response);
                    // Optionally, you can reload the project list or update the UI as needed
                    location.reload();
                },
                error: function(error) {
                    console.error('Error deleting project:', error);
                    // Handle error, if any
                }
            });
        }

        // Function to handle project update
        function updateProject(projectId) {
            $.ajax({
                url: 'UpdateProjectServlet',
                type: 'POST',
                data: { projectId: projectId },
                success: function(response) {
                    alert(response);
                    // Optionally, you can reload the project list or update the UI as needed
                    location.reload();
                },
                error: function(error) {
                    console.error('Error updating project:', error);
                    // Handle error, if any
                }
            });
        }
    </script>
</head>
<body>
    <header>
        <!-- Your existing header -->
    </header>

    <main>
        <form action="Project" method="post" enctype="multipart/form-data">
            <!-- Your existing form for adding projects -->
        </form>

        <div id="project-list">
            <%
                ArrayList<Object> al = new ProjectDao().read();
                for(Object o:al){
                    Projectpojo p = (Projectpojo)o;
            %>
                <div class="project-item">
                    <img src="images/myprojects/<%=p.getFilename()%>" class="img-fluid" alt="project image"
                        style="max-width: 300px; max-height: 150px; margin: auto; display: block;"><br>
                    <button onclick="updateProject('<%= p.getProjectId() %>')">Update</button>
                    <button onclick="deleteProject('<%= p.getProjectId() %>')">Delete</button>
                    <br><br>
                </div>
            <%
                }
            %>
        </div>
    </main>

    <div id="message-container">
        <%@include file="message.jsp" %>
    </div>
</body>
</html>
